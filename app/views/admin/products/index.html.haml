.mt-3
  - products.each do |product|
    %div(style='display: flex')
      .ml-2
        = product.title
      .ml-2
        = product.description
      .ml-2
        = link_to 'show', admin_product_path(product)
      .ml-2
        = link_to 'edit', edit_admin_product_path(product)
      .ml-2
        = link_to "刪除", admin_product_path(product), method: "delete", data: { confirm: "確認刪除???" }
    %hr
