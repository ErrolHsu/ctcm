  <h1>商品列表</h1>

  <%= link_to "新增商品", new_admin_product_path %>

  <table>
    <thead>
      <tr>
        <td>商品名稱</td>
        <td>商品介紹</td>
        <td>商品價格</td>
        <td>商品數量</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td>
          <%= link_to "編輯", edit_admin_product_path(product) %>
          <%= link_to "刪除", admin_product_path(product), method: "delete", data: { confirm: "確認刪除???" } %>
        </td>        
      </tr>
      <% end %>
    </tbody>
  </table>