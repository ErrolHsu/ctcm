  <h1>商品列表</h1>
  <% if user_signed_in? %>
    <p>目前登入 會員id: <%= current_user.try(:id) %></p>
    <%= link_to '登出', destroy_user_session_path,method: 'delete', class: "btn btn-default btn-info" %>
  <% else %>
    <p>未登入</p>
    <%= link_to '登入', new_user_session_path, class: "btn btn-default btn-info" %>
  <% end %>
  <br>
  <%= link_to "新增商品", new_admin_product_path %>
  <%= link_to '購物車', cart_path, class: "btn btn-default btn-success" %>
  <table>
    <thead>
      <tr>
        <td>商品名稱</td>
        <td>商品介紹</td>
        <td>商品價格</td>
        <td>商品數量</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td>
          <%= link_to '放到購物車', add_cart_path(product), method: "post", class: "btn btn-xs btn-danger" %>
          <%= link_to "編輯", edit_admin_product_path(product) %>
          <%= link_to "刪除", admin_product_path(product), method: "delete", data: { confirm: "確認刪除???" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>