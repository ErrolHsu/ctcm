.user_navbar
  .nav-left.inline-block
    #nav-logo.d-flex
      // 漢堡條
      .con.pointer.phone-show.mr-2(v-on:click='showPhoneOptions' v-bind:class="barStyle")
        .bar.top
        .bar.middle
        .bar.bottom
      %transition(name='opacity')
        = link_to root_path do
          #logo-left(v-if='!phone_options')
      = link_to root_path do
        #logo-right.phone-hide
  .nav-right.inline-block.mr-4
    %div.font-15.ml-4.phone-hide
      = link_to '定期配送', root_path(anchor: "period-order")
    %div.font-15.ml-4.phone-hide
      = link_to '商城', '#'
    / %div.font-15.ml-4.phone-hide
    /   = link_to 'SHOP', '#'
    #about-box.font-15.ml-4.phone-hide
      = link_to 'ABOUT', '/people'
      .links
        %div
          %a{:href => "farm_info"}
            莊園農場
        %div
          %a{:href => "history"}
            創辦歷程
        %div
          %a{:href => "goals"}
            展望與目標
    %div.font-15.ml-4.phone-hide
      = link_to 'BLOG', '#'
    / vue 組件
    %div.font-15.ml-4.phone-hide
      %navbar-user-controller(v-bind:current_user="current_user" v-bind:user_login='user_login')

    .phone-hide.icon-link(style='margin-left: 40px;')
      %a{:href => "https://www.facebook.com/altitudetosteria/", 'target' =>"_blank"}
        %i.fab.facebook-f
    .phone-hide.icon-link.ml-4
      %a{:href => "https://www.instagram.com/altitudetosteriacafe", 'target' =>"_blank"}
        %i.fab.instagram
    // 購物車
    / %transition(name='opacity')
    /   %div.icon-link(v-if='!phone_options' style='margin-left: 30px;')
    /     %a{:href => ""}
    /       %i#cart.fas.fa-shopping-cart
    / %transition(name='opacity')
    /   #cart-count.ml-3(v-if='!phone_options')
    /     %div.center
    /       0


/// 手機navbar選單

%transition(name='slide-X')
  #navbar-option-modal.phone-show(v-if='phone_options')
    .nav-content
      %div.center.bottom-line(v-on:click='phone_options = false')
        %a.list{:href => "/#period-order"}
          .icon
            %i.fas.fa-truck-moving
          .list-name
            定期配送
      %div.center.bottom-line
        %a.list{:href => "#"}
          .icon
            %i.fas.fa-mosque
          .list-name
            商城
      / %div.center.bottom-line
      /   %a{:href => "#"}
      /     SHOP
      %div.center.bottom-line
        %a.list.pointer(style='position: relative;'){"v-on:click.prevent" =>'showAboutLinks'}
          / %i.fas.fa-plus
          .icon.plus-container(v-bind:class='plusStyle')
            .plus-box
          .list-name
            ABOUT
        %transition(name='slide-Y')
          %div(v-if='about_links')
            %a{:href => "people"}(style='font-size: 18px !important')
              關於我們
            %br
            %a{:href => "farm_info"}(style='font-size: 18px !important')
              莊園農場
            %br
            %a{:href => "history"}(style='font-size: 18px !important')
              創辦歷程
            %br
            %a{:href => "goals"}(style='font-size: 18px !important')
              展望與目標

      %div.center.bottom-line
        %a.list{:href => "#"}
          .icon
            %i.far.fa-newspaper
          .list-name
            BLOG
      / vue 組件
      %phone-user-controller(v-bind:current_user="current_user" v-bind:user_login='user_login')

