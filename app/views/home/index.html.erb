

<div id="app">

  <p v-html='render_mark()'></p>
  {{ message }}


<button v-on:click='say_hi(<%= @t %>)' class="btn btn-secondary">
  按我
</button>

</div>


<div id='ouo'>
  <p>{{msg}}</p>
</div>


<script type="text/javascript">
  (function() {
    document.onreadystatechange = function () {
      if (document.readyState === 'interactive') {
        const ouo = new Vue({
          el: '#ouo',
          data: {
            msg: 'OuO'
          }
        })
      }
    }
  })();
</script>
