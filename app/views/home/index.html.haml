#home_page_app
  .d-inline-block.ml-2(v-for='product in products')
    .button-normal(v-on:click='product_selected(product)')
      {{ product.title }}
  %br

  .d-inline-block.ml-2.mt-4(v-for='variant in current_variants')
    .button-normal(v-on:click='variant_seleted(variant)')
      {{ variant.weight }} {{ variant.price }}

  %br

  .d-inline-block.ml-2.mt-4(v-if='customer_set.variant_id != 0'  v-for='period in periods')
    .button-normal(v-on:click='period_seleted(period)')
      {{ period }}

  %hr/
  .button-normal.ml-2(v-if='show_buy_button' v-on:click='buy_request')
    Buy
