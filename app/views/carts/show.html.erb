<h1>購物車</h1>

<%= link_to '清空購物車', cart_path, method: :delete, class: "btn btn-default btn-danger" %>
<p>目前登入 會員id: <%= current_user.try(:id) %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>數量</td>
      <td>單價</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% current_cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= item.quantity %></td>
        <!-- TODO -->
        <td><%= 100 %></td>
        <td><%= 100 %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td colspan="3">總計</td>
    <td><%= current_cart.total_price %></td>
  </tfoot>
</table>

<%= link_to '繼續選購', admin_products_path, class: "btn btn-default" %>
<%= link_to '結帳', '#', class: "btn btn-default" %>
